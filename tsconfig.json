{
  "compilerOptions": {
    
    "target": "es5",                               
    "jsx": "react",                            
    "module": "ESNext",                          
    "moduleResolution": "node",                    
    "declaration": true,                             
    "sourceMap": true,
    "rootDir": "src",     
    "outDir": "dist",                                   
    "declarationDir": "./types",      
    "emitDeclarationOnly": true,                    
    "allowSyntheticDefaultImports": true,           
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                     
    "skipLibCheck": true                             
  }
}
